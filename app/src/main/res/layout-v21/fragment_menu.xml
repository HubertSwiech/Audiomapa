<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment0Btn"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="35dp"
            android:background="@drawable/top_menu_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment1Btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment1Btn"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:text="1"
            android:textSize="35dp"
            android:background="#D8BA9F"
            app:layout_constraintLeft_toLeftOf="@id/fragment0Btn"
            app:layout_constraintRight_toRightOf="@id/fragment0Btn"
            app:layout_constraintTop_toBottomOf="@id/fragment0Btn"
            app:layout_constraintBottom_toTopOf="@id/fragment2Btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment2Btn"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:text="2"
            android:textSize="35dp"
            android:background="#B3845A"
            app:layout_constraintLeft_toLeftOf="@id/fragment1Btn"
            app:layout_constraintRight_toRightOf="@id/fragment1Btn"
            app:layout_constraintTop_toBottomOf="@id/fragment1Btn"
            app:layout_constraintBottom_toTopOf="@id/fragment3Btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment3Btn"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:text="3"
            android:textSize="35dp"
            android:background="#D8BA9F"
            app:layout_constraintLeft_toLeftOf="@id/fragment2Btn"
            app:layout_constraintRight_toRightOf="@id/fragment2Btn"
            app:layout_constraintTop_toBottomOf="@id/fragment2Btn"
            app:layout_constraintBottom_toTopOf="@id/fragment4Btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment4Btn"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:background="#B3845A"
            android:text="4"
            android:textSize="35dp"
            app:layout_constraintLeft_toLeftOf="@id/fragment3Btn"
            app:layout_constraintRight_toRightOf="@id/fragment3Btn"
            app:layout_constraintTop_toBottomOf="@id/fragment3Btn"
            app:layout_constraintBottom_toTopOf="@id/fragmentL1Btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragmentL1Btn"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:text="L1"
            android:textSize="29dp"
            android:background="#D8BA9F"
            app:layout_constraintLeft_toLeftOf="@id/fragment4Btn"
            app:layout_constraintRight_toRightOf="@id/fragment4Btn"
            app:layout_constraintTop_toBottomOf="@id/fragment4Btn"
            app:layout_constraintBottom_toTopOf="@id/fragmentL2Btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragmentL2Btn"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:text="L2"
            android:textSize="29dp"
            android:background="#B3845A"
            app:layout_constraintLeft_toLeftOf="@id/fragmentL1Btn"
            app:layout_constraintRight_toRightOf="@id/fragmentL1Btn"
            app:layout_constraintTop_toBottomOf="@id/fragmentL1Btn"
            app:layout_constraintBottom_toTopOf="@id/fragmentL3Btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragmentL3Btn"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:text="L3"
            android:elevation="10dp"
            android:background="#D8BA9F"
            android:textSize="29dp"
            app:layout_constraintLeft_toLeftOf="@id/fragmentL2Btn"
            app:layout_constraintRight_toRightOf="@id/fragmentL2Btn"
            app:layout_constraintTop_toBottomOf="@id/fragmentL2Btn"
            app:layout_constraintBottom_toTopOf="@id/fragmentStrefyBtn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragmentStrefyBtn"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bottom_menu_btn"
            android:text="strefy"
            android:textSize="19dp"
            android:layout_marginBottom="70dp"
            app:layout_constraintLeft_toLeftOf="@id/fragmentL3Btn"
            app:layout_constraintRight_toRightOf="@id/fragmentL3Btn"
            app:layout_constraintTop_toBottomOf="@id/fragmentL3Btn"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>

