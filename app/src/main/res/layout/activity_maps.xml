    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bottomPanelBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="770dp"
            android:background="@drawable/bottom_panel_bcg"
            android:text="panel do odczytywania komunikatów"
            android:textSize="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/commentListBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/info_window_button"
            android:text="lista komentarzy"
            android:textSize="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="@id/bottomPanelBtn"
            app:layout_constraintBottom_toTopOf="@id/bottomPanelBtn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/qrScannerBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/scanner_button"
            android:text="Skaner kodów QR"
            android:textSize="0dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintRight_toRightOf="@id/commentListBtn"
            app:layout_constraintBottom_toTopOf="@id/commentListBtn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
