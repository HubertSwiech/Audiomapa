<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="15dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:id="@+id/fragmentContainerMenu"
        android:elevation="10dp"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/ContainerBottomPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="430dp"
        android:elevation="10dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/ButtonAction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="15dp"
        android:paddingTop="50dp" />

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:mapId="e0b976d1af12bba1"
        tools:context=".MapsActivity" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/poiBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/marker_invis_btn"
        android:minHeight="48dp"
        android:text="POI"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ostBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="112dp"
        android:background="@drawable/marker_invis_btn"
        android:minHeight="48dp"
        android:text="ostrzeżenia"
        android:textSize="13sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/locBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="217dp"
        android:background="@drawable/marker_invis_btn"
        android:minHeight="48dp"
        android:text="lokalizacja"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/polyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="217dp"
        android:background="@drawable/marker_invis_btn"
        android:minHeight="48dp"
        android:text="Strefy"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/floorBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="112dp"
        android:background="@drawable/marker_invis_btn"
        android:minHeight="48dp"
        android:text="Piętra"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu_button"
        android:text="wybierz piętro"
        android:textSize="0dp" />

<!--    <androidx.appcompat.widget.AppCompatButton-->
<!--        android:id="@+id/trybNiewidomi"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="45dp"-->
<!--        android:layout_alignParentLeft="true"-->
<!--        android:layout_marginLeft="90dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginRight="10dp"-->
<!--        android:background="@drawable/top_button"-->
<!--        android:text="Komunikaty dla niewidzących"-->
<!--        android:textSize="17dp" />-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/search_button"
        android:gravity="left|center"
        android:iconifiedByDefault="false"
        android:minHeight="48dp"
        android:paddingLeft="56dp"
        android:text="Odszukaj punkt"
        android:textColor="#8F8F8F"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/floor"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="70dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/dot0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="1600dp"
        android:layout_marginTop="475dp"
        android:visibility="invisible"
        android:src="@drawable/dot_gif"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomPanelBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="720dp"
        android:background="@drawable/bottom_panel_bcg"
        android:text="panel do odczytywania komunikatów"

        android:textSize="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settingsBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/settings_button"
        android:text="Ustawienia"
        android:textSize="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/commentListBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="640dp"
        android:background="@drawable/info_window_button"
        android:text="lista komentarzy"
        android:textSize="0dp" />

</RelativeLayout>
