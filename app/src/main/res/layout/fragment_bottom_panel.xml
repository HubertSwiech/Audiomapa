<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentBottomPanel"
    android:focusable="true"
    android:clickable="true"
    android:background="#E6FFFFFF"
    tools:targetApi="p">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hideFrag"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/bottom_panel_down"
        android:text="Zamknij panel do odczytywania komentarzy."
        android:textSize="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop_mr1" />

        <EditText
            android:id="@+id/komunikat"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:accessibilityTraversalAfter="@id/hideFrag"
            android:enabled="true"
            android:focusableInTouchMode="false"
            android:hint="Po wybraniu punktów i zatwierdzeniu przyciskami poniżej, w tym polu wyświetli się treść komunikatu."
            android:inputType="none"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/hideFrag"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:targetApi="lollipop_mr1" />

    <LinearLayout
        android:id="@+id/lokal"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:focusable="true"
        android:accessibilityTraversalAfter="@id/komunikat"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/komunikat"
        app:layout_constraintRight_toLeftOf="@id/cel"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/startText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:labelFor="@+id/startEdit"
            android:text="Twoja lokalizacja"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/startEdit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Numer punktu"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="25sp"
            tools:targetApi="lollipop_mr1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cel"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:accessibilityTraversalAfter = "@+id/lokal"
        android:orientation="vertical"
        tools:targetApi="lollipop_mr1"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/komunikat"
        app:layout_constraintLeft_toRightOf="@id/lokal"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/endText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:labelFor="@+id/spnTest"
            android:text="Cel"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spnTest"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_background"
            android:spinnerMode="dropdown"
            android:textSize="45sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/przyciski"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:accessibilityTraversalAfter="@id/cel"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:orientation="horizontal"
        tools:targetApi="lollipop_mr1"
        app:layout_constraintTop_toBottomOf="@id/lokal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numerRead"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bottom_panel_button"
            android:text="Gdzie jestem"
            android:textSize="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/nawigujRead"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nawigujRead"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bottom_panel_button"
            android:text="Prowadź \ndo celu"
            android:textSize="17dp"
            app:layout_constraintLeft_toRightOf="@id/numerRead"
            app:layout_constraintRight_toLeftOf="@id/stop"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bottom_panel_button"
            android:text="przerwij\nczytanie"

            android:textSize="17dp"
            app:layout_constraintLeft_toRightOf="@id/nawigujRead"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>