<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popup_bcg"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backPopupEdit"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_arrow_bcg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/lokalLayout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            app:layout_constraintRight_toLeftOf="@id/celLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backPopupEdit">

            <TextView
                android:id="@+id/popupTextStart"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="#000000"
                android:text="Lokalizacja"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/popupEditStart"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="text"
                android:hint="Numer punktu"
                android:maxLines="1"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/celLayout"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/lokalLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/lokalLayout">

            <TextView
                android:id="@+id/popupTextEnd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Cel"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spnTestPop"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown"
                android:textSize="45dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/popupText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="6"
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:background="#EBFFE4"
            android:hint="Wpisz swÃ³j komentarz"
            android:gravity="top"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/lokalLayout"
            app:layout_constraintLeft_toLeftOf="@id/lokalLayout"
            app:layout_constraintRight_toRightOf="@id/celLayout"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/popupZapisz"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/save_button"
            android:gravity="center"
            android:textSize="23dp"
            android:text="edytuj"
            app:layout_constraintTop_toBottomOf="@id/popupText"
            app:layout_constraintLeft_toLeftOf="@id/popupText"
            app:layout_constraintRight_toRightOf="@id/popupText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>